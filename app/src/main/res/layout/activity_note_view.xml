<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackTheme">

    <ImageView
        android:id="@+id/delete_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_forever_white"
        android:onClick="deleteNote"/>

    <TextView
        android:id="@+id/view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textColor="@color/whiteTheme"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_below="@id/delete_entry"/>
    <TextView
        android:id="@+id/view_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteTheme"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_below="@id/view_date"/>
    <TextView
        android:id="@+id/entry_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes:"
        android:textColor="@color/whiteTheme"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_below="@id/view_date_tv" />
    <Button
        android:id="@+id/view_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:theme="@android:style/Theme.Holo"
        android:onClick="editNote"/>
    <EditText
        android:id="@+id/view_note_field"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="@color/whiteTheme"
        android:layout_margin="10dp"
        android:layout_below="@id/entry_notes"
        android:layout_above="@id/view_save_button"
        android:gravity="top"
        android:inputType="none"/>

</RelativeLayout>